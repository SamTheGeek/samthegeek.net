---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Hi there! I'm Sam, helping great people make awesome things since 1992." } = Astro.props;
const currentPath = Astro.url.pathname;

const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  if (href === '/blog') {
    return currentPath.startsWith('/blog');
  }
  return currentPath === href;
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "proxima-nova", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 13px;
        line-height: 1.6em;
        color: #666;
        background-color: #fff;
      }

      a {
        color: #0085bd;
        text-decoration: none;
      }

      a:hover {
        color: #60a5dd;
      }
    </style>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <header class="sidebar-header">
          <a href="/" class="site-title">I am Sam</a>
          <p class="site-tagline">Let's Make Something</p>
        </header>
        <nav class="main-nav">
          <div class="nav-links nav-row">
            <a href="/copenhagen" class={isActive('/copenhagen') ? 'active-link' : ''}>Copenhagen</a>
            <a href="/italy" class={isActive('/italy') ? 'active-link' : ''}>Italy</a>
            <a href="/los-angeles" class={isActive('/los-angeles') ? 'active-link' : ''}>Los Angeles</a>
            <a href="/france" class={isActive('/france') ? 'active-link' : ''}>France</a>
            <a href="/japan" class={isActive('/japan') ? 'active-link' : ''}>Japan</a>
            <a href="/canada" class={isActive('/canada') ? 'active-link' : ''}>Canada</a>
            <a href="/elsewhere" class={isActive('/elsewhere') ? 'active-link' : ''}>Elsewhere</a>
          </div>
          <div class="secondary-nav nav-row">
            <a href="/about" class={isActive('/about') ? 'active-link' : ''}>About</a>
            <a href="/blog" class={isActive('/blog') ? 'active-link' : ''}>Blog</a>
            <a href="https://twarchive.samthegeek.net" target="_blank" rel="noopener noreferrer">Twitter Archive</a>
            <a href="https://music.samthegeek.net" target="_blank" rel="noopener noreferrer">Apple Music Analyzer</a>
          </div>
        </nav>
        <footer class="sidebar-footer">
          <div class="social-links">
            <a href="https://www.linkedin.com/in/samthegeek" target="_blank" rel="noopener noreferrer">LinkedIn</a>
            <a href="mailto:sam@samthegeek.net">Email</a>
          </div>
          <p class="location">Brooklyn, N.Y., United States</p>
        </footer>
      </aside>

      <main class="content">
        <slot />
      </main>
    </div>

    <style>
      .layout {
        min-height: 100vh;
        min-width: 900px;
        max-width: 1233px;
        margin: 0 auto;
        padding: 50px;
        position: relative;
      }

      .sidebar {
        position: absolute;
        top: calc(50px + 2rem);
        left: 50px;
        width: 180px;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        background: #fff;
        text-align: left;
      }

      .site-title {
        font-size: 27px;
        font-weight: 700;
        color: #000;
        line-height: 1.2em;
        letter-spacing: 0.01em;
      }

      .site-tagline {
        margin-top: 0.5rem;
        font-size: 13px;
        font-weight: 400;
        color: #222;
      }

      .nav-links {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        font-weight: 500;
      }

      .nav-links a {
        color: #1f1f1f;
      }

      .nav-links .active-link,
      .secondary-nav .active-link {
        color: #a3a3a3;
      }

      .nav-links a:hover,
      .secondary-nav a:hover {
        color: #a3a3a3;
      }

      .nav-links .active-link:hover,
      .secondary-nav .active-link:hover {
        color: #a3a3a3;
      }

      .secondary-nav {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        font-size: 12px;
        font-weight: 400;
        margin-top: 1.5rem;
      }

      .secondary-nav a {
        color: #7a7a7a;
      }

      .secondary-nav a:hover {
        color: #000;
      }

      .nav-row {
        overflow-x: auto;
        white-space: nowrap;
        scrollbar-width: none;
      }

      .nav-row::-webkit-scrollbar {
        display: none;
      }

      .content {
        margin-left: 250px;
        padding: 0;
        min-height: 100vh;
      }

      .sidebar-footer {
        margin-top: auto;
      }

      .social-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem 1rem;
        margin-bottom: 0.75rem;
      }

      .social-links a {
        color: #8c8c8c;
      }

      .social-links a:hover {
        color: #a3a3a3;
      }

      .location {
        font-size: 12px;
        color: #666;
      }

      @media (max-width: 1280px) {
        .layout {
          min-width: auto;
          max-width: none;
          padding: 30px;
        }

        .sidebar {
          position: static;
          width: auto;
          gap: 1.25rem;
          margin-bottom: 2rem;
        }

        .content {
          margin-left: 0;
        }

        .nav-links,
        .secondary-nav {
          flex-direction: row;
          gap: 1rem;
          margin-top: 0;
        }

        .secondary-nav {
          margin-top: 0.5rem;
        }

        .sidebar-footer {
          margin-top: 1.5rem;
        }
      }

      @media (max-width: 768px) {
        .layout {
          min-width: auto;
        }
      }
    </style>
  </body>
</html>
