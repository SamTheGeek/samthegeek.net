---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Gallery from '../components/Gallery.astro';

// Get all galleries and sort by published date (newest first)
const allGalleries = await getCollection('galleries');
const sortedGalleries = allGalleries.sort((a, b) =>
  b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf()
);

// Get the newest gallery
const newestGallery = sortedGalleries[0];

if (!newestGallery) {
  throw new Error('No galleries found');
}
---

<BaseLayout
  title={`${newestGallery.data.title} - I am Sam`}
  description={newestGallery.data.description || `Photos from ${newestGallery.data.location}`}
>
  <Gallery title="" images={newestGallery.data.images} />
</BaseLayout>
