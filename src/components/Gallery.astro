---
import Lightbox from './Lightbox.astro';

interface Props {
  title: string;
  images: Array<{ src: string; alt: string; id: number }>;
}

const { title, images } = Astro.props;
---

<div class="gallery-page">
  <h1>{title}</h1>

  <div class="gallery-grid">
    {images.map((image) => (
      <div class="gallery-item">
        <img src={image.src} alt={image.alt} loading="lazy" />
      </div>
    ))}
  </div>
</div>

<Lightbox />

<style>
  .gallery-page h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
    color: #222;
  }

  .gallery-grid {
    --tile-gap: 0.25rem;
    column-gap: var(--tile-gap);
    columns: 3 300px;
    margin-top: 2rem;
  }

  .gallery-item {
    break-inside: avoid;
    margin-bottom: var(--tile-gap);
    overflow: hidden;
    background: #f5f5f5;
    transition: opacity 0.2s;
  }

  .gallery-item:hover {
    opacity: 0.9;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .gallery-page h1 {
      font-size: 2rem;
    }

    .gallery-grid {
      columns: 1 250px;
      column-gap: var(--tile-gap);
    }
  }
</style>
