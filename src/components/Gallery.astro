---
import Lightbox from './Lightbox.astro';

interface Props {
  title: string;
  images: Array<{ src: string; alt: string; id: number }>;
}

const { title, images } = Astro.props;
---

<div class="gallery-page">
  <div class="gallery-grid">
    {images.map((image) => (
      <div class="gallery-item">
        <img src={image.src} alt={image.alt} loading="lazy" />
      </div>
    ))}
  </div>
</div>

<Lightbox />

<style>
  .gallery-grid {
    --tile-gap: 0.25rem;
    column-gap: var(--tile-gap);
    column-count: 3;
    margin-top: 2rem;
    column-fill: auto;
    line-height: 0;
  }

  .gallery-item {
    display: inline-block;
    width: 100%;
    break-inside: avoid;
    margin-bottom: var(--tile-gap);
    overflow: hidden;
    background: #f5f5f5;
    line-height: normal;
    transition: opacity 0.2s;
  }

  .gallery-item:hover {
    opacity: 0.9;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    cursor: pointer;
  }

  @media (max-width: 1280px) {
    .gallery-grid {
      column-count: 2;
    }
  }

  @media (max-width: 768px) {
    .gallery-grid {
      column-count: 1;
      column-gap: var(--tile-gap);
    }
  }
</style>
