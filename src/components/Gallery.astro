---
import Lightbox from './Lightbox.astro';

interface Props {
  title: string;
  images: Array<{
    src: string;
    alt: string;
    exif?: {
      date?: string;
      camera?: string;
      lens?: string;
      focalLength?: string;
      aperture?: string;
      shutterSpeed?: string;
      iso?: string;
      latitude?: number;
      longitude?: number;
      location?: string;
    };
  }>;
}

const { title, images } = Astro.props;
---

<div class="gallery-page">
  <div class="gallery-grid">
    {images.map((image) => (
      <div class="gallery-item">
        <img
          src={image.src}
          alt={image.alt}
          loading="lazy"
          data-exif-date={image.exif?.date}
          data-exif-camera={image.exif?.camera}
          data-exif-lens={image.exif?.lens}
          data-exif-focal-length={image.exif?.focalLength}
          data-exif-aperture={image.exif?.aperture}
          data-exif-shutter-speed={image.exif?.shutterSpeed}
          data-exif-iso={image.exif?.iso}
          data-exif-latitude={image.exif?.latitude}
          data-exif-longitude={image.exif?.longitude}
          data-exif-location={image.exif?.location}
        />
      </div>
    ))}
  </div>
</div>

<Lightbox />

<style>
  .gallery-grid {
    --tile-gap: 0.25rem;
    column-gap: var(--tile-gap);
    column-count: 3;
    column-width: 280px;
    column-fill: auto;
    margin-top: 0;
    line-height: 0;
  }

  .gallery-item {
    display: block;
    width: 100%;
    break-inside: avoid;
    margin-bottom: var(--tile-gap);
    overflow: hidden;
    background: #f5f5f5;
    line-height: normal;
    transition: opacity 0.2s;
  }

  .gallery-item:hover {
    opacity: 0.9;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    cursor: pointer;
  }

  @media (max-width: 1280px) {
    .gallery-grid {
      column-count: 2;
    }
  }

  @media (max-width: 768px) {
    .gallery-grid {
      column-count: 1;
      column-gap: var(--tile-gap);
    }
  }
</style>
